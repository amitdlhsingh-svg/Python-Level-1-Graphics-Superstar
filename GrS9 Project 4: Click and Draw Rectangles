import turtle #start
import random
t=turtle.Turtle()
screen=turtle.Screen()
def drawRect(x,y): #function
  r=random.randint(0,255) #variables
  g=random.randint(0,255)
  b=random.randint(0,255)
  t.begin_fill()
  t.color(r,g,b)
  for i in range(2): #forloop
    t.forward(x)
    t.left(90)
    t.forward(y)
    t.left(90)
  t.end_fill()
screen.onclick(drawRect)
screen.listen() #end
