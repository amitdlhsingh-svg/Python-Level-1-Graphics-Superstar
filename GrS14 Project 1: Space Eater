import turtle #start
import random
t=turtle.Turtle()
screen=turtle.Screen()
screen.tracer(0)
t.speed(0)
t.penup()
screen.bgcolor("Black")
t.goto(-200,270)
t.pendown()
f=turtle.Turtle()
f.shape("turtle")
f.color("blue")
g=turtle.Turtle()
g.penup()
g.color("magenta")
g.goto(-200,280)
score=0
g.write("score:" +str(score), font = ("Arial", 16, "normal"))
t.color("red")
for i in range(4):
  t.forward(400)
  t.right(90)
t.ht()
balls=[]
for i in range(10): #forloop
  x=random.randint(-200,200)
  y=random.randint(-130,270)
  direction=random.randint(0,360)
  r=turtle.Turtle()
  r.color("cyan")
  r.shape("circle")
  r.penup()
  r.goto(x,y)
  r.setheading(direction)
  balls.append(r)

def Collisions(turtle): #function
  if turtle.xcor() >= 200 or turtle.xcor() <= -200:
    turtle.right(180)
  elif turtle.ycor() >= 270 or turtle.ycor() <= -130:
    turtle.right(180)

def right():
  f.right(10)
def left():
  f.left(10)
screen.onkey(right,"right")
screen.onkey(left,"left")
screen.listen()
while True: #while true loop
  f.penup()
  f.forward(5)
  Collisions(f)
  for ball in balls:
    if abs(ball.xcor()-f.xcor()) <10 and abs(ball.ycor()-f.ycor())<10:
      score += 1
      g.clear()
      g.write("score:" +str(score), font = ("Arial", 16, "normal"))
      ball.goto(random.randint(-200,200), random.randint(-130,270))
    Collisions(ball)
    ball.forward(10)
  screen.update()
screen.update()
